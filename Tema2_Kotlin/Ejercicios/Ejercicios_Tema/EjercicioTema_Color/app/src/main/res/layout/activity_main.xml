<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- app:layout_constraintVertical_bias="0.25" para llevar para abajo el group -->
    <RadioGroup
        android:id="@+id/radio_group_color"
        android:layout_width="272dp"
        android:layout_height="190dp"
        android:layout_marginStart="196dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="215dp"
        android:layout_marginBottom="614dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.05"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/radioAzul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00BCD4"
            android:text="AZUL" />

        <RadioButton
            android:id="@+id/radioVerde"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#8BC34A"
            android:text="VERDE" />

        <RadioButton
            android:id="@+id/radioRojo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#E6525D"
            android:text="ROJO" />

        <RadioButton
            android:id="@+id/radioNegro"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#7E7676"
            android:text="NEGRO" />
    </RadioGroup>

    <!-- PARA AJUSTAR EL CONTENIDO AL TAMAÃ‘O DEL TEXTO -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:text="HOLA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/radio_group_color"></TextView>
</androidx.constraintlayout.widget.ConstraintLayout>